{% extends "layout.njk" %}

{% import "parts/card.njk" as cards %}

{% block content %}

{% call cards.render('Esquecel a senha','login container')%}
   <section class="login container form" >

            <form method="post" action="/users/forgot-password">
                <div class="fields">
                    <div class="item">
                        <div>Email</div>
                        <div class="input">
                            <input type="text" name="email" onblur="validate.apply(this,'isEmail')" placeholder="Digite o email cadastrado" value="{{ user.email }}">
                        </div>
                    </div> 
                </div>
                <button class="button" type="submit">Recuperar senha</button>
            </form>

   {%endcall%}

{% endblock content %}