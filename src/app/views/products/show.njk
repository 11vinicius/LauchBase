{% extends "layout.njk" %}

{% block content %}

<section class="product-single conteiner">

    <div class="gallery">
        <div class="highlight">
            {%if not product.product.files[0]%}
                <img src="http://placehold.it/500x500/?text=produto sem foto"/>
            {%else%}
                <img src="{{product.product.files[0].src}}" 
                alt="{{product.product.files[0].name}}"
                onclick="Lightbox.open()"/>
            {%endif%}

            <div class="lightbox-target">
                <img src="{{product.product.files[0].src}}" alt="{{product.product.files[0].name}}" >
                <a href="" class="lightbox-close "
                
                onclick="Lightbox.close()">
                    <i class="material-icons" >Close</i>
                </a>
            </div>
        </div>

        <div class="gallery-preview">
            {%for image in product.files%}
                <img src="{{image.src}}" alt="{{image.name}}"
                {%if loop.index0 == 0 %}
                class="active"
                {%endif%}
                onclick="ImageGallery.setImage(event)"
                >
            {%endfor%}
        </div>
    </div>

    <div class="info">  
        <h1>{{product.name}}</h1>

        <div class="published">
            Publicado em {{product.published.day}} as {{product.published.hour}}
        </div>

        <div class="description">
            {{product.description}}
        </div>

        <div class="price-buy"> 
            <div class="price">
               R$ {{product.formattedPrice}}
              {%if product.formattedOldprice != product.formattedPrice%}
                <div class="old">{{product.formattedOldprice}}</div>
                {%endif%}
            </div>
           
            <div class="buy">
                {% if product.status == 0 %}
                    <p class="unavailable">Indispon√≠vel</p>
                {% elseif product.quantity ==0 %}
                    <p class="unavailable">Fora de estoque</p>
                {% else %}
                 <button class="button">Comprar</button>
                 {% endif %}
            </div>
        </div>

    </div>


</section>

{% endblock content %}